rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an authenticated admin
    function isAdmin() {
      return request.auth != null; // For this demo, any authenticated user is an admin.
                                   // In a real app, you'd check for a specific role/claim.
    }

    match /submissions/{submissionId} {
      // Admins can perform any action on any submission document.
      allow read, write: if isAdmin();
      
      // Public users can GET a single document if it's a winner.
      allow get: if resource.data.isWinner == true;

      // Public users can LIST documents only if they are querying for winners.
      // This allows the public winners page to function.
      allow list: if isAdmin() || (request.query.limit <= 100 && request.query.filters.size() == 1 && request.query.filters[0].field == "isWinner" && request.query.filters[0].operator == "==" && request.query.filters[0].value == true);
    }
  }
}
