rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // For this demo, any authenticated user is an admin.
      // In a real app, you'd check for a specific role or claim.
      return request.auth != null;
    }

    match /submissions/{submissionId} {
      // Admins can perform any action.
      allow read, write: if isAdmin();
      
      // The public can read documents from the 'submissions' collection
      // ONLY if the query is specifically filtering for winners.
      // This allows the public winners page to work without exposing other data.
      allow list: if request.query.where.isWinner == true;
      allow get: if resource.data.isWinner == true;
    }
  }
}
