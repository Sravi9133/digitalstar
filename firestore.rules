rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an authenticated admin
    function isAdmin() {
      // For this demo, any authenticated user is an admin.
      // In a real app, you'd check for a specific role/claim.
      return request.auth != null;
    }

    match /submissions/{submissionId} {
        // Admins can read and write any submission.
        allow read, write: if isAdmin();

        // The public can read documents (get and list) ONLY if they are winners.
        // This rule allows the public /winners page to query for all winner documents.
        allow read: if resource.data.isWinner == true;
    }
  }
}
