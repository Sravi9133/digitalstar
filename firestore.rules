
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public, read-only access to announcements
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // Allow anyone to create a submission, but only admins can manage them
    match /submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // Secure competition meta data
    match /competition_meta/{competitionId} {
        allow read: if true; // Allow anyone to read this
        allow write: if request.auth != null; // Only admins can write
    }

    // Disallow all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
