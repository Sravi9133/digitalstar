rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /submissions/{document} {
      // Admins can read and write all submissions
      allow read, write: if request.auth != null;
      
      // Public can create new submissions
      allow create: if true;

      // Public can only read documents where isWinner is true
      allow get: if resource.data.isWinner == true;
      allow list: if query.where('isWinner', '==', true);
    }
  }
}
